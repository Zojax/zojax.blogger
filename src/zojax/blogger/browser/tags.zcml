<configure
   xmlns="http://namespaces.zope.org/zope"
   xmlns:zojax="http://namespaces.zope.org/zojax"
   xmlns:browser="http://namespaces.zope.org/browser"
   i18n_domain="zojax.blogger">

  <zojax:pagelet
     name="index.html"
     for="..tags.BlogTag"
     template="tag.pt"
     class=".tags.TagView"
     permission="zope.View" />

  <zojax:pagelet
     name="index.html"
     for="..tags.BlogTags"
     class=".tags.TagsView"
     permission="zope.View" />

</configure>
